
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<input id="keyword" placeholder="Nhập từ khóa cần tìm" />
<div id="result"></div>
@section Scripts{
    <script>
        $(document).ready(function(){
            $("#keyword").keyup(function(){
                $.ajax({
                    url: "/Ajax/HandleSearch",
                    method: "post",
                    data: { Keyword : $(this).val().trim()},
                    success: function(response){
                        $("#result").html(response);
                    },
                    error: function(xhr){}
                });
            });
        });
    </script>
}
